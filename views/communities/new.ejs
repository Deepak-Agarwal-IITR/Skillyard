<%- include('./../partials/header') %>


<form class="needs-validation" novalidate action="/communities" method="post" >
  <div class="mb-3">
      <label for="name">Name: </label>
      <input class="form-control" type="text" name="community[name]" id="name">
  </div>
  <div class="mb-3">
      <label for="description">Description: </label>
      <textarea class="form-control" name="community[description]" id="description" rows="3"></textarea>
  </div>
  <div class="mb-3">
      <button class="btn btn-success" type="submit">Add</button>
  </div>
</form>




